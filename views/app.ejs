<% layout("/layout/boilerplate.ejs") %>
<body>
    <div  class="icon-row my-3">
        <a href="/listings/category?category=Mountains" class="category-icon">
            <i class="fa-solid fa-mountain"></i>
        </a>
        <a href="/listings/category?category=Beaches" class="category-icon">
            <i class="fa-solid fa-umbrella-beach"></i>
        </a>
        <a href="/listings/category?category=Forests" class="category-icon">
            <i class="fa-solid fa-tree"></i>
        </a>
        <a href="/listings/category?category=Lakes" class="category-icon">
            <i class="fa-solid fa-water"></i>
        </a>
        <a href="/listings/category?category=Deserts" class="category-icon">
            <i class="fa-solid fa-sun"></i>
        </a>
    </div>
    <div class="container mt-4">
        <!-- Responsive Bootstrap grid layout -->
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            <% lists.forEach(list => { %>
                <div class="col">
                    <!-- Entire card wrapped inside the link -->
                    <a href="/listings/<%= list._id %>" style="text-decoration: none; color: inherit;">
                        <div class="card h-100 shadow-sm">
                            <!-- Clickable image -->
                            <img src="<%= list.image.url %>" 
                                 class="card-img-top" 
                                 alt="<%= list.title %>"
                                 style="height: 20rem; object-fit: cover;">
                            
                            <div class="card-body">
                                <h5 class="card-title"><%= list.title %></h5>
                                <div class="card-text mb-2">
                                    <% if (list.price != null) { %>
                                        <span class="fw-bold">â‚¹<%= list.price.toLocaleString("en-IN") %></span>
                                    <% } else { %>
                                        <em class="text-muted">Price not available</em>
                                    <% } %>
                                </div>
                                <p class="card-text text-muted">
                                    <small><%= list.country %></small>
                                </p>
                            </div>
                        </div>
                    </a>
                </div>
            <% }); %>
        </div>
    </div>
</body>