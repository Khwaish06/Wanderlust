<% layout("/layout/boilerplate.ejs") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <div class="container mt-5">
                <h3>Edit Listing</h3>
                <form method="POST" class="needs-validation" novalidate action="/listings/<%= content._id %>?_method=PATCH" enctype="multipart/form-data">
                    
                    <!-- Title -->
                    <div class="mb-3">
                        <label for="title" class="form-label">Edit Title</label>
                        <input type="text" id="title" name="listing[title]" placeholder="Title" value="<%= content.title %>" class="form-control" required>
                    </div>

                    <!-- Description -->
                    <div class="mb-3">
                        <label for="description" class="form-label">Edit Description</label>
                        <textarea id="description" name="listing[description]" placeholder="Description" class="form-control" required><%= content.description %></textarea>
                    </div>

                    <!-- Image Link -->
                    <div class="mb-3">
                        <label for="image" class="form-label">Edit Image Link</label>
                        <input type="file" id="image" name="image" placeholder=" Upload New Image" class="form-control">
                    </div>

                    <!-- Price & Country -->
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Edit Price</label>
                            <input type="number" id="price" name="listing[price]" placeholder="Price" value="<%= content.price %>" class="form-control" required>
                        </div>
                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-label">Edit Country</label>
                            <input type="text" id="country" name="listing[country]" placeholder="Country" value="<%= content.country %>" class="form-control" required>
                        </div>
                    </div>

                    <!-- Category -->
                    <div class="mb-3">
                        <label for="category" class="form-label">Edit Category</label>
                        <select class="form-select" id="category" name="listing[category]" required>
                            <option value="Mountains" <%= content.category === "Mountains" ? "selected" : "" %>>Mountains</option>
                            <option value="Beaches" <%= content.category === "Beaches" ? "selected" : "" %>>Beaches</option>
                            <option value="Deserts" <%= content.category === "Deserts" ? "selected" : "" %>>Deserts</option>
                            <option value="Forests" <%= content.category === "Forests" ? "selected" : "" %>>Forests</option>
                            <option value="Lakes" <%= content.category === "Lakes" ? "selected" : "" %>>Lakes</option>
                        </select>
                    </div>

                    <!-- Location -->
                    <div class="mb-3">
                        <label for="location" class="form-label">Edit Location</label>
                        <input type="text" id="location" name="listing[location]" placeholder="Location" value="<%= content.location %>" class="form-control" required>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-dark add-btn">Update Listing</button>
                    <br><br>
                </form>
            </div>
        </div>
    </div>
</body>

